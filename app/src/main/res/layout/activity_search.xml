<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue">

        <TextView
            android:id="@+id/settings"
            android:layout_width="79dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="15dp"
            android:gravity="top"
            android:text="Settings"
            android:textSize="20sp"
            android:textColor="@color/white" />


    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/location_zi"
        android:layout_width="150dp"
        android:layout_height="22dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="@string/location_zi"
        android:textSize="15dp"
        android:textAppearance="@style/location_zi"
        android:gravity="top"
        />

    <SearchView
        android:id="@+id/idSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:iconifiedByDefault="false"
        android:padding="4dp"
        android:queryHint="Search Cities" />

    <TextView
        android:id="@+id/use_metric_"
        android:layout_width="108dp"
        android:layout_height="17dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/use_metric_"
        android:textAppearance="@style/use_metric_"
        android:gravity="top"
        />

    <View
        android:id="@+id/rectangle_6"
        android:layout_width="67dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="274dp"
        android:layout_marginTop="-15dp"
        android:background="@color/grey" />
    <View
        android:id="@+id/ellipse_1"
        android:layout_width="33dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="278dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-25dp"
        android:background="@color/blue"
        />
    <Button
        android:id="@+id/savebtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Save Settings"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/blue"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
