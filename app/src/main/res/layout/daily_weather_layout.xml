<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/forecastDayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:text="Today"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/forecastImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="110dp"
            android:layout_toRightOf="@+id/forecastDayTextView"
            android:src="@drawable/cloudy_day_1" />

        <TextView
            android:id="@+id/forecastTempLowTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="80dp"
            android:layout_toStartOf="@+id/forecastTempHighTextView"
            android:layout_toLeftOf="@+id/forecastTempHighTextView"
            android:text="18 C"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/forecastTempHighTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerInParent="true"
            android:text="25 C"
            android:textSize="15sp"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>